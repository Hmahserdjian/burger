<div class="container">
    <div class="row">
        <div class=" col-lg-12">
            <div class="jumbotron">
                <center>
                    <h1>Eat Da Burger!</h1>
                    <img src="https://i.ytimg.com/vi/D4IOAIyEMsU/maxresdefault.jpg" style="width:300px;height:200px;">
                </center>
            </div>
        </div>
    </div>
</div>
<div class="container">




    <ul>
        {{#each burger}} {{#unless Eat}} {{/unless}} {{/each}}
    </ul>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Ordered</h2>
            </div>
        </div>
    </div>
    <div align="right"><h2>Eaten!</h2>
</div>
    <ul>
        {{#each burger}} {{#if Eat}} {{/if}} {{/each}}
    </ul>
    <center>
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="br">burger</label>
                <input type="text" id="br" name="name">
            </div>

            <div class="form-group">
                <label for="devoured">eaten?</label>
                <br>
                <input type="radio" name="devoured" value="1">Eat</input>
                <br>
                <input type="radio" name="to be eaten" value="0">get</input>
            </div>

            <button type="submit">Add da burger</button>
        </form>
    </center>

</div>

<div class="container">
    <div class="panel panel-default">
        <div class="panel-body">
            Wheres DA Beef?
        </div>
    </div>
</div>