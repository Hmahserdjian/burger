<div class="container">
    <div class="row">
        <div class=" col-lg-12">
            <div class="jumbotron">
                <center>
                    <h1>Eat Da Burger!</h1>
                    <img src="https://i.ytimg.com/vi/D4IOAIyEMsU/maxresdefault.jpg" style="width:300px;height:200px;">
                </center>
            </div>
        </div>
    </div>
</div>

<div class="container">

    <div class="row">
        <div class="col-md-6">
            <h2>Ordered</h2>
        </div>
        {{!-- <div class="row"> --}}
            {{#each burger_data}} {{#unless this.devoured}}
            <div class="col-md-9">
                {{this.id}} {{this.burger_name}} {{/unless}} {{/each}}
            </div>
        </div>
    
    </div>
</div>
</div>

<div class="container">
    <ul>
        {{#each burger_data}} {{#if Eat}} {{/if}} {{/each}}
    </ul>
    <center>
        <form action="/burgers/create" method="POST" class="create-form">

            <div class="form-group">
                <label for="br">burger</label>
                <input type="text" id="br" name="burgerName">
            </div>

            <div class="form-group">
                <label for="devoured">Eat Me or Order a burger</label>
                <br>
                <input type="radio" name="devoured" value="1">Eat</input>
                <br>
                <input type="radio" name="devoured" value="0">Order</input>
            </div>

            <button type="submit">Add da burger</button>
        </form>
    </center>
</div>


<div class="container">
    <div class="panel panel-default">
        <div class="panel-body">
            Wheres DA Beef?
        </div>
    </div>
</div>